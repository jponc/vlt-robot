<div>
  <div class='possible-action-container'>
    <button class='btn btn-primary' data-action='place'>PLACE</button>
    <button class='btn btn-warning' data-action='left'>LEFT</button>
    <button class='btn btn-warning' data-action='right'>RIGHT</button>
    <button class='btn btn-success' data-action='move'>MOVE</button>
    <button class='btn btn-info' data-action='report'>REPORT</button>
  </div>

  <div class='place-container'>
    <p>Place your robot in a new coordinate</p>
    <form class='change-position-form'>
      <div class='form-group'>
        <label for="place-x-coord">X Coordinate</label>
        <input type='hidden' class='coords-input' name="x_pos">
      </div>
      <div class='form-group'>
        <label for="place-y-coord">Y Coordinate</label>
        <input type='hidden' class='coords-input' name="y_pos">
      </div>

      <div class='form-group'>
        <label>Facing</label>
        <input type='hidden' id="facing-input" name="facing">
      </div>

      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</div>
